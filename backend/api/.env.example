# Database (MySQL as OS service)
DATABASE_URL="mysql://root:password@localhost:3306/liora"

# JWT Configuration
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRATION="7d"

# Firebase Admin SDK (for backend authentication)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_MESSAGING_SENDER_ID="your-sender-id"

# Redis (as OS service)
REDIS_HOST="localhost"
REDIS_PORT=6379

# Backend API Configuration
PORT=3000
APP_URL=http://localhost:3000

# Database Configuration (MySQL must be running as OS service)
UPLOAD_ROOT="./uploads"
AVATAR_UPLOAD_DIR="avatars"
MATERIAL_UPLOAD_DIR="materials"
MAX_UPLOAD_SIZE_MB=10

# Payment Gateway (Midtrans)
PAYMENT_PROVIDER="midtrans"
MIDTRANS_SERVER_KEY="SB-Mid-server-xxx"
MIDTRANS_CLIENT_KEY="SB-Mid-client-xxx"
MIDTRANS_BASE_URL="https://api.sandbox.midtrans.com/v2"
MIDTRANS_IS_PRODUCTION=false

# Logging
LOG_LEVEL="info"

# Application
NODE_ENV="development"
PORT=3000

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:3001

# WebSocket Configuration
WS_PORT=3001
