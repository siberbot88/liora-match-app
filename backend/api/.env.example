# Database Configuration (MySQL Local - OS Service)
DATABASE_URL="mysql://root:passwordmysqlmu@localhost:3306/liora"

# Redis Configuration (Local - OS Service)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET="ganti_dengan_string_random"
JWT_EXPIRES_IN="7d"

# Firebase Admin SDK (Environment Variables)
FIREBASE_PROJECT_ID=liora-xxxx
FIREBASE_CLIENT_EMAIL=your-adminsdk@liora-xxxx.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nISI_KEY_Firebase\n-----END PRIVATE KEY-----\n"

# Atau gunakan path ke service account JSON file (comment yang atas jika pakai ini):
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:3001

# WebSocket Configuration
WS_PORT=3001
